<%= form_with model: @doctor, local: true do |form| %>
 
  <% if @doctor.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@doctor.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @doctor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

   <p>
    <%= select(:doctor, :spec, [['Kardiolog', 'Kardiolog'], ['Laryngolog', 'Laryngolog'], ['Anestezjolog', 'Anestezjolog']]) %>
   </p>
 
  <p>
    <%= form.label :address %><br>
    <%= form.text_area :address %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
 
<% end %>